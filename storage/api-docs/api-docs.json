        "/api/products/{code}": {
            "get": {
                "tags": [
                    "products"
                ],
                "summary": "Returns specific product by code",
                "operationId": "d3deebb6679ed9b4ecd1c3af94736c15",
                "parameters": [
                    {
                        "name": "code",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 8457489
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "bearerToken": []
                    }
                ]
            },
            "put": {
                "tags": [
                    "products"
                ],
                "summary": "Update a specific product by code",
                "operationId": "0f1e54a84587dee40efb8d8341a15536",
                "parameters": [
                    {
                        "name": "code",
                        "in": "path",
                        "description": "Product code",
                        "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "status",
                                    "imported_t",
                                    "url",
                                    "creator"
                                ],
                                "properties": {
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "draft",
                                            "trash",
                                            "published"
                                        ],
                                        "example": "draft"
                                    },
                                    "imported_t": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2025-05-08 10:00:00"
                                    },
                                    "url": {
                                        "type": "string",
                                        "format": "url",
                                        "example": "https://example.com"
                                    },
                                    "creator": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "created_t": {
                                        "type": "integer",
                                        "example": 1623497200,
                                        "nullable": true
                                    },
                                    "last_modified_t": {
                                        "type": "integer",
                                        "example": 1623497250,
                                        "nullable": true
                                    },
                                    "product_name": {
                                        "type": "string",
                                        "example": "Product A",
                                        "nullable": true
                                    },
                                    "quantity": {
                                        "type": "string",
                                        "example": "10",
                                        "nullable": true
                                    },
                                    "brands": {
                                        "type": "string",
                                        "example": "Brand X",
                                        "nullable": true
                                    },
                                    "categories": {
                                        "type": "string",
                                        "example": "Food",
                                        "nullable": true
                                    },
                                    "labels": {
                                        "type": "string",
                                        "example": "Label Y",
                                        "nullable": true
                                    },
                                    "cities": {
                                        "type": "string",
                                        "example": "City Z",
                                        "nullable": true
                                    },
                                    "purchase_places": {
                                        "type": "string",
                                        "example": "Store X",
                                        "nullable": true
                                    },
                                    "stores": {
                                        "type": "string",
                                        "example": "Store Y",
                                        "nullable": true
                                    },
                                    "ingredients_text": {
                                        "type": "string",
                                        "example": "Water, Sugar",
                                        "nullable": true
                                    },
                                    "traces": {
                                        "type": "string",
                                        "example": "Contains nuts",
                                        "nullable": true
                                    },
                                    "serving_size": {
                                        "type": "string",
                                        "example": "100g",
                                        "nullable": true
                                    },
                                    "serving_quantity": {
                                        "type": "number",
                                        "example": 1,
                                        "nullable": true
                                    },
                                    "nutriscore_score": {
                                        "type": "integer",
                                        "example": 50,
                                        "nullable": true
                                    },
                                    "nutriscore_grade": {
                                        "type": "string",
                                        "example": "B",
                                        "nullable": true
                                    },
                                    "main_category": {
                                        "type": "string",
                                        "example": "Beverages",
                                        "nullable": true
                                    },
                                    "image_url": {
                                        "type": "string",
                                        "example": "https://example.com/image.jpg",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "bearerToken": []
                    }
                ]
            },
            "delete": {
                "tags": [
